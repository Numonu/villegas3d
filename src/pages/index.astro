---
import "@fontsource-variable/roboto-slab";
import "@fontsource/poppins";

import Hero from "../layout/Hero.astro";
import PageHeader from "../layout/PageHeader.astro";
import Wrapper from "../components/utils/Wrapper.astro";
import Services from "../layout/Services.astro";
import Features from "../layout/Features.astro";
import Reviews from "../layout/Reviews.astro";
import Portafolio from "../layout/Portafolio.astro";
import About from "../layout/About.astro";
import Contact from "../layout/Contact.astro";
import PageFooter from "../layout/PageFooter.astro";
import Pricing from "../layout/Pricing.astro";
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/svg/3d.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <meta
      name="description"
      content="Discover my professional freelance custom 3D rendering and modeling services. We transform your ideas into stunning visual realities. Power your project with Villegas3D now!"
    />
    <meta property="og:type" content="website" />
    <meta
      property="og:title"
      content="Contract Custom 3D Modeling and Rendering Services"
    />
    <meta
      property="og:description"
      content="Discover professional freelance custom 3D modeling and rendering services. We transform your ideas into stunning visual realities. Power your project with now!"
    />
    <meta property="og:image" content="/images/screen.jpg" />
    <meta property="og:url" content="permalink" />
    <title>Custom 3D Modeling and Rendering Services - Villegas3D</title>
    <style is:global>
      html {
        scroll-behavior: smooth;
      }
      body {
        font-family: "Poppins", sans-serif;
        color: #262626;
      }
      img {
        font-size: 0.6rem;
      }
    </style>
  </head>
  <body>
    <Wrapper>
      <PageHeader />
      <Hero />
      <Features />
      <Services />
      <Reviews />
      <About />
      <Pricing />
      <Portafolio />
      <Contact />
    </Wrapper>
    <PageFooter />
  </body>
</html>
